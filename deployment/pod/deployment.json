{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "munchcoach-app",
    "namespace": "munchcoach"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "munchcoach-app"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "munchcoach-app"
        }
      },
      "spec": {
        "imagePullSecrets": [
          {
            "name": "ghcr-secret"
          }
        ],
        "containers": [
          {
            "name": "munchcoach-app",
            "image": "ghcr.io/munchcoach/webapp:dev-ce49ed80fee7fb30881b9e32ccca0a61ff3a715a",
            "env": [
              {
                "name": "NUXT_PUBLIC_I18N_BASE_URL",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "NUXT_PUBLIC_I18N_BASE_URL",
                    "name": "munchcoach-env-secrets"
                  }
                }
              },
              {
                "name": "SUPABASE_URL",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "SUPABASE_URL",
                    "name": "munchcoach-env-secrets"
                  }
                }
              },
              {
                "name": "SUPABASE_KEY",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "SUPABASE_KEY",
                    "name": "munchcoach-env-secrets"
                  }
                }
              }
            ],
            "ports": [
              {
                "containerPort": 3000
              }
            ],
            "resources": {
              "requests": {
                "cpu": "500m",
                "memory": "750Mi"
              },
              "limits": {
                "cpu": "1000m",
                "memory": "1000Mi"
              }
            }
          }
        ]
      }
    }
  }
}